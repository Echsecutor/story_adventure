{
  "name": "@story-adventure/viewer",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist .vite playwright-report test-results coverage && find src -name '*.js' -not -path '*/node_modules/*' -delete 2>/dev/null; true"
  },
  "dependencies": {
    "@story-adventure/shared": "workspace:*",
    "bootstrap": "^5.3.3",
    "dompurify": "^3.2.2",
    "marked": "^14.1.0",
    "react": "^19.0.0",
    "react-bootstrap": "^2.10.5",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/dompurify": "^3.0.5",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "jsdom": "^25.0.1",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vitest": "^2.1.8"
  }
}
